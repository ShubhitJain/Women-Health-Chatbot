<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@color/white">
    <ImageView
        android:id="@+id/img_bot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/baseline_person_grey_24"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bot_message_background">

        <TextView
            android:id="@+id/tv_bot_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bot Message"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Citations:"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black" />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/sourceDocRV"
                />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/tv_follow_up_questions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Follow-up questions:"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:padding="4dp"
                android:background="@drawable/rounded_background"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/followUpQuesRV"
                />







        </LinearLayout>


    </LinearLayout>


</LinearLayout>
